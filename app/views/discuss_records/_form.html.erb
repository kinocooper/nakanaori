<%= form_with model: discuss_record, local: true do |f| %>

  <%= f.label :title, "タイトル" %>
  <%= f.text_field :title %>

  <%= f.label :detail, "ケンカの内容" %>
  <%= f.text_area :detail %>

  <%= f.fields_for my_opinion do |i| %>
    <%= i.label :claim, "自分の主張" %>
    <%= i.text_area :claim %>

    <%= i.label :conclude, "自分の反省・まとめ" %>
    <%= i.text_area :conclude %>
  <% end %>

  <%= f.submit %>

<% end %>