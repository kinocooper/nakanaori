<div class = "container">
  <div class = "row my-3">
    <div class="col-lg-3 page-top p-0">
      <h2>ユーザー情報編集</h2>
    </div>
  </div>

  <div class = "row">
    <div class="col-lg-9 order-lg-2 main-content">
      <div class="row">
        <div class="col-10 col-offset-2 mx-auto">

          <%= render "layouts/error_message", obj: @user %>
          <%= form_with model: @user, local: true do |f| %>

            <div class="form-group w-50 mx-auto">
              <%= f.label :name %>
              <%= f.text_field :name, class:"form-control" %>
            </div>

            <div class="form-group w-50 mx-auto">
              <%= f.label :email, "メールアドレス" %>
              <%= f.email_field :email, class:"form-control" %>
            </div>

            <div class="form-group w-50 mx-auto">
              <%= f.label :oko_gauge, "おこゲージ" %>
              <%#= f.select :oko_gauge, [['ふつう', "nomal"], ['かなしい', "sad"], ['おこ', "oko"], ['激おこ', "gekioko"], ['一人にして', "alone"]],{}, class:"form-control" %>
              <%= f.select :oko_gauge,User.oko_gauges.keys.map {|k| [I18n.t("enums.user.oko_gauge.#{k}"), k]} ,{}, class:"form-control" %>
              <!--oko_gaugeはenum使用につき配列化されている。そのキー部分だけをブロック|k|にマップ(一覧排出)、I18n使用でそれ選択肢表示を日本語化-->
            </div>

            <div class="actions my-4 w-50 mx-auto">
              <%= f.submit "ユーザー情報更新！", class:"form-control btn btn-info btn-lg" %>
            </div>
          <% end %>

          <!--<div class="text-right">-->
          <!--  <%#= link_to "退会する？", confirm_user_path, class:"btn btn-outline-danger btn-sm" %><br>-->
          <!--  片割れだけの退会は複雑なので、一旦後回しにする👆-->
          <!--</div>-->

        </div>
      </div>
    </div>

    <%= render "pairs/sidebar", pair: @pair %> <!--サイドバー col-3使用-->

  </div>
</div>
