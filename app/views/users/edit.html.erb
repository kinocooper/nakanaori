<h2>ユーザ情報編集</h2>

<!--form_with 指定modelから自動生成のパスがおかしいので具体的にupdateアクションのパスを指定した　原因不明-->
<%#= form_with model: @user, url:"/pairs", method: :patch, local: true do |f| %>
<%= form_with model: @user,url:"/users", method: :patch, local: true do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email, "メールアドレス" %>
  <%= f.email_field :email %>

  <%= f.label :oko_gauge, "おこゲージ" %>
  <%= f.select :oko_gauge, options_for_select([['ふつう', 0], ['かなしい', 1], ['おこ', 2], ['激おこ', 3], ['一人にして', 4]]), {}, {class: 'oko_gauge_select'} %>

  <%= f.submit "ユーザー情報更新！" %>

<% end %>
