<div class = "container">
  <div class = "row my-3">
    <div class = "col-4">
      <h2>とっぷぺーじ</h2>
    </div>
  </div>

  <div class = "row">

    <%= render "sidebar", pair: @pair %> <!--サイドバー col-3使用-->

    <div class="col-9 bg-info">
      <% unless @discussing_records.empty?   %>
        <h3>[ケンカ中！！5件]</h3>
        <% @discussing_records.each do |record| %>
          <p>
            <%= link_to "#{record.title} #{record.created_at}", discuss_record_path(record) %>
            <% record.tags.each do |tag| %>
              <%= "[#{tag.name}]" %>
            <% end %>
          </p>
        <% end %>
      <% end %>

      <h3>[最新ナカナオリ5件]</h3>
      <% @closed_records.each do |record| %>
        <p>
          <%= link_to "#{record.title} #{record.created_at}", discuss_record_path(record) %>
          <% record.tags.each do |tag| %>
            <%= "[#{tag.name}]" %>
          <% end %>
        </p>
      <% end %>

      <%#= column_chart @w_dates %>
      <h3>[今年のナカナオリチャート]</h3>
      <%= column_chart @y_dates %>
    </div>
  </div>
  <%#= paginate @items_page %>
</div>

