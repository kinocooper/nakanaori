<div class = "container">
  <div class = "row my-3">
      <h2>ペア情報編集</h2>
  </div>

  <div class = "row">

    <%= render "pairs/sidebar", pair: @pair %> <!--サイドバー col-3使用-->

    <div class="col-9">
      <%= form_with model: @pair, local: true do |f| %>

        <%= f.label :name, "ペア名" %>
        <%= f.text_field :name %>

        <%= f.label :image, "ペア画像" %>
        <%= f.file_field :image, accept: "image/*" %>

        <%= f.label :motto, "ペアのモットー！" %>
        <%= f.text_field :motto %>

        <%= f.label :pair_type, "関係性" %>
        <%= f.select :pair_type, [["未設定","not_set"],["夫婦","married"],["カップル","couple"],["親子","family"],["その他","other"]] %>

        <%= f.label :keyword, "キーワード" %>
        <%= f.text_field :keyword %>

        <%= f.submit "ペア情報更新！" %>

      <% end %>

      <%= link_to "完全退会する？", p_confirm_path, class:"btn btn-danger" %>
    </div>
  </div>
</div>

