<h2>ペア情報編集画面</h2>

<%= form_with model: @pair, local: true do |f| %>

  <%= f.label :name, "ペア名" %>
  <%= f.text_field :name %>

  <%= f.label :image, "ペア画像" %>
  <%= f.file_field :image, accept: "image/*" %>

  <%= f.label :motto, "ペアのモットー！" %>
  <%= f.text_field :motto %>

  <%= f.label :keyword, "キーワード" %>
  <%= f.text_field :keyword %>

  <%= f.submit "ペア情報更新！" %>

<% end %>
