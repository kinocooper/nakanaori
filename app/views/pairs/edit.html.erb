<div class = "container">
  <div class = "row my-3">
    <div class="col-lg-3 page-top p-0">
      <h2>ペア情報編集</h2>
    </div>
  </div>

  <div class = "row">

    <div class="col-lg-9 order-lg-2 main-content">
      <div class="row">
        <div class="col-10 col-offset-2 mx-auto">

          <%= render "layouts/error_message", obj: @pair %>
          <%= form_with model: @pair, local: true do |f| %>

            <div class="form-group w-50 mx-auto">
              <%= f.label :name, "ペア名" %>
              <%= f.text_field :name, class:"form-control" %>
            </div>

            <div class="form-group w-50 mx-auto">
              <%= f.label :image, "ペア画像" %>
              <%= f.file_field :image, accept: "image/*" %>
            </div>

            <div class="form-group w-50 mx-auto">
              <%= f.label :motto, "ペアのモットー！" %>
              <%= f.text_field :motto, class:"form-control" %>
            </div>

            <div class="form-group w-50 mx-auto">
              <%= f.label :pair_type, "関係性" %>
              <%#= f.select :pair_type, [["未設定","not_set"],["夫婦","married"],["カップル","couple"],["親子","family"],["その他","other"]],{} , class:"form-control" %>
              <%= f.select :pair_type,Pair.pair_types.keys.map {|k| [I18n.t("enums.pair.pair_type.#{k}"), k]},{} , class:"form-control" %>
            </div>

            <div class="form-group w-50 mx-auto">
              <%= f.label :keyword, "ペアリングキーワード" %>
              <%= f.text_field :keyword, class:"form-control" %>
            </div>

            <div class="actions my-4 w-50 mx-auto">
              <%= f.submit "ペア情報更新！", class:"form-control btn btn-info btn-lg" %>
            </div>
          <% end %>

          <div class="text-right">
            <%= link_to "完全退会する？", confirm_pair_path, class:"btn btn-outline-danger align-items-bottom  btn-sm" %>
          </div>
        </div>
      </div>
    </div>

    <%= render "pairs/sidebar", pair: @pair %> <!--サイドバー col-3使用-->

  </div>
</div>

