<div class="col-3">
  <div class="row">
    <div class="col-12 border rounded-lg shadow sidebar pt-2 pb-3">
      <h3 class="text-center sidebar__name my-2"><%= pair.name %></h3>
            <%= image_tag pair.get_pair_image(200,200),class:"mx-auto d-block rounded-circle" %><br>
      <table class="table">
        <tr>
          <th colspan="2" class="mx-auto">ふたりの標語</th>
        </tr>
        <tr>
          <td colspan="2" class="align-middle"><%= pair.motto %></td>
        </tr>
        <tr>
          <th class="w-50">おしどり<br>ランク</th>
          <td class="align-middle"><%= pair.rank_i18n + pair.pair_type_i18n %></td>
        </tr>
        <% if current_user.pair.is_paired %>
          <tr>
            <th class="w-50"><%= current_user.partner.name %>さんの<br>おこゲージ</th>
            <td class="align-middle"><%= current_user.partner.oko_gauge_i18n %></td>
          </tr>
        <% end %>
      </table>

      <%= link_to "ペア編集", edit_pair_path, class:"btn btn-block btn-outline-secondary" %>
      <%= link_to "ユーザー編集", edit_user_path, class:"btn btn-block btn-outline-secondary my-2" %>
      <% unless current_user.pair.is_paired %>
        <%= link_to "ペア招待", invite_path, class:"btn btn-block btn-outline-info my-2" %>
      <% end %>
    </div>
  </div>
</div>
