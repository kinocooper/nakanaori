<div class = "container">
  <div class = "row my-3">
    <div class="col-lg-3 page-top p-0">
      <h2>新規登録</h2>
    </div>
  </div>

  <div class = "row">

    <div class="col-lg-8 col-offset-4 mx-auto">

      <%= form_with model: @user, url: user_registration_path do |f| %>
        <div class="w-50 mx-auto">
          <%= render "devise/shared/error_messages", resource: resource %>
        </div>

        <div class="form_group my-4 w-50 mx-auto">
          <%= f.label :name, "ユーザー名" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
        </div>

        <div class="form_group my-4 w-50 mx-auto">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autocomplete: "email", class:"form-control" %>
        </div>

        <div class="form-group my-4 w-50 mx-auto">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
            <em>(最低 <%= @minimum_password_length %> 文字以上)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
        </div>

        <div class="form-group my-4 w-50 mx-auto">
          <%= f.label :確認用に再度入力してください %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
        </div>

        <div class="actions my-4 w-50 mx-auto">
          <%= f.submit "新規登録", class:"form-control btn-info btn-lg" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
