<div class = "container">
  <div class = "row my-3">
    <div class="col-3 page-top p-0">
      <h2>ログイン</h2>
    </div>
  </div>

  <div class = "row">

    <div class="col-8 col-offset-4 mx-auto">

      <%= form_with model: @user, url: user_session_path do |f| %>
        <div class="w-50 mx-auto">
          <%= render "devise/shared/error_messages", resource: resource %>
        </div>

        <div class="form_group my-4 w-50 mx-auto">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>

        <div class="form-group my-4 w-50 mx-auto">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
        </div>

        <div class="actions my-4 w-50 mx-auto">
          <%= f.submit "ログイン", class:"form-control btn-info btn-lg" %>
        </div>
      <% end %>

    <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
